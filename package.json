{
  "name": "SolPayments Svelte Template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "env-cmd rollup -c",
    "dev": "env-cmd rollup -c -w",
    "start": "sirv public --no-clear --single",
    "validate": "svelte-check",
    "lint": "npx eslint --fix '{,!(node_modules|public)/**/}*.{js,ts,svelte}'",
    "format": "npx prettier --write '{,!(node_modules|public)/**/}*.{js,ts,svelte}'"
  },
  "lint-staged": {
    "src/**/*.{js,ts,svelte}": [
      "svelte-check",
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-eslint": "^10.1.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.24.0",
    "eslint-config-typestrict": "^1.0.1",
    "eslint-plugin-sonarjs": "^0.6.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rollup": "^2.45.2",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sirv-cli": "^1.0.11",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-environment-variables": "^1.0.4",
    "svelte-preprocess": "^4.7.0",
    "tslib": "^2.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@project-serum/borsh": "^0.1.1",
    "@project-serum/sol-wallet-adapter": "^0.1.8",
    "@solana/spl-token": "^0.1.3",
    "@solana/spl-token-registry": "^0.2.62",
    "@solana/web3.js": "^1.4.0",
    "borsh": "^0.3.1",
    "buffer-layout": "^1.2.0"
  }
}
